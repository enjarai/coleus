{
	"schemaVersion": 1,
	"id": "coleus",
	"version": "${version}",
	"name": "Coleus",
	"description": "Addon for Lavender that creates web versions of guidebooks",
	"authors": [
		"Master-Bw3"
	],
	"contact": {
		"sources": "https://github.com/Master-Bw3/Coleus"
	},
	"license": "WTFPL",
	"icon": "assets/coleus/icon.png",
	"environment": "client",
	"entrypoints": {
		"client": [
			{
				"value": "mod.master_bw3.coleus.ColeusClient",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		"coleus.mixins.json",
		{
			"config": "coleus.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.15.0",
		"minecraft": ">=1.21",
		"java": ">=21",
		"fabric-api": "*",
		"fabric-language-kotlin": "*",
		"lavender": ">=0.1.10+1.21"
	}
}